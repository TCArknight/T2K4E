<?xml version="1.0" encoding="UTF-8"?>

<!-- This file contains the assortment of miscellaneous things that are required for
      the game system. Miscellaneous things include the mechanisms for managing applied
      damage, user images, and personal info for each actor. It also includes things
      used to track resource pools, such as those used for managing the available
      attribute points, skill points, etc.
-->

<document signature="Hero Lab Data">
	
  <!-- Attribute resource to track the number of attribute points that can be assigned -->
  <thing
    id="resAttrib"
    name="Attribute Points"
    compset="Resource"
    panellink="basics">
    <fieldval field="resObject" value="Attribute"/>

    <!-- Automatically add the resource to every actor -->
    <tag group="Helper" tag="Bootstrap"/>
	
    <tag group="explicit" tag="1"/>

    <!-- Adjust points based on Age category -->
    <eval index="1" phase="Initialize" priority="1000" name="Initial Attribute Points"><![CDATA[
	  field[resMax].value = herofield[acStartAttrib].value
		
      ]]></eval>
	  
    <!-- Adjust points based on Age category -->
    <eval index="2" phase="Initialize" priority="10000" name="Adjust Attr Pts."><![CDATA[
	  field[resMax].value += herofield[acBonusAttrib].value
		
      ]]></eval>
    </thing>
	
  <!-- Skill resource to track the number of attribute points that can be assigned -->
  <thing
    id="resSkill"
    name="Skill-Related Attribute Points"
    compset="Resource"
    panellink="basics">
    <fieldval field="resObject" value="Skill"/>
    <fieldval field="resMax" value="0"/>

    <!-- Automatically add the resource to every actor -->
    <tag group="Helper" tag="Bootstrap"/>
	
    <tag group="explicit" tag="2"/>

    <!-- Adjust points based on Age category -->
    <eval index="1" phase="Setup" priority="1000" name="Adjust Skill Points"><![CDATA[
	  ~if we're using the lifepath creation, we dont need to adjust anything
	  doneif (hero.tagis[source.srcT2KLifepath] <> 0)
	  
	  if (hero.child[mscPerson].field[perAge].value <= herofield[acAgeYoung].value ) then
        #resmax[resSkill] += 8
	  elseif (hero.child[mscPerson].field[perAge].value > herofield[acAgeAdult].value ) then
	    #resmax[resSkill] += 12
		endif
		
      ]]></eval>

    </thing>

  <!-- Attribute resource to track the number of attribute points that can be assigned -->
